{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Frontend: Start Development Server",
			"type": "shell",
			"command": "pnpm dev",
			"options": {
				"cwd": "${workspaceFolder}/frontend"
			},
			"isBackground": true,
			"group": "build",
			"presentation": {
				"reveal": "always",
				"panel": "dedicated"
			}
		},
		{
			"label": "crm",
			"dependsOn": [
				"Backend: Start Development Server",
				"Frontend: Start Development Server"
			],
			"dependsOrder": "parallel"
		},
		{
			"label": "Backend: Start Development Server",
			"type": "shell",
			"command": "pnpm start:dev",
			"options": {
				"cwd": "${workspaceFolder}/backend"
			},
			"isBackground": true,
			"problemMatcher": {
				"pattern": {
					"regexp": "^(.*):(\\d+):(\\d+)\\s+-\\s+(error|warning)\\s+(.*)$",
					"file": 1,
					"line": 2,
					"column": 3,
					"severity": 4,
					"message": 5
				},
				"background": {
					"activeOnStart": true,
					"beginsPattern": ".*",
					"endsPattern": "Application is running on:.*"
				}
			},
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"presentation": {
				"reveal": "always",
				"panel": "dedicated"
			}
		},
		{
			"label": "Backend: Build",
			"type": "shell",
			"command": "pnpm build",
			"options": {
				"cwd": "${workspaceFolder}/backend"
			},
			"group": "build",
			"presentation": {
				"reveal": "always",
				"panel": "shared"
			}
		},
		{
			"label": "Backend: Install Dependencies",
			"type": "shell",
			"command": "pnpm install",
			"options": {
				"cwd": "${workspaceFolder}/backend"
			},
			"presentation": {
				"reveal": "always",
				"panel": "shared"
			}
		}
	]
}